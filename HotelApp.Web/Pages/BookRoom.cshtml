@page
@model HotelApp.Web.BookRoomModel
@{
    ViewData["Title"] = "Book A Room";
}

<h1>Book A Room</h1>

<h2>@Model.RoomType.Title</h2>
<p>
    @Model.RoomType.Description
</p>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.StreetAddress"></label>
        <input asp-for="@Model.StreetAddress" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.City"></label>
        <input asp-for="@Model.City" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.State"></label>
        <input asp-for="@Model.State" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ZipCode"></label>
        <input asp-for="@Model.ZipCode" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.PhoneNumber"></label>
        <input asp-for="@Model.PhoneNumber" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.EmailAddress"></label>
        <input asp-for="@Model.EmailAddress" />
    </div>




    <button type="submit" class="btn btn-primary">Book</button>
</form>